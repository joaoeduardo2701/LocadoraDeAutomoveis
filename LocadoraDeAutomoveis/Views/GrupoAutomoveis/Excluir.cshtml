@model LocadoraDeAutomoveis.WebApp.Models.DetalhesGrupoAutomoveisViewModel

@{
	ViewBag.Title = "Excluir Grupo de Veículos";
}

<h2>Deseja excluir o este grupo de automóveis?</h2>

<div class="col">
	<partial name="_Informacoes" model="Model"></partial>

	<form class="d-grid gap-2 d-md-block mt-5" asp-action="Excluir">
		<button class="btn btn-danger px-5">
			<i class="bi bi-trash-fill me-1"></i>
			Confirmar
		</button>

		<a class="btn btn-outline-primary px-5" asp-action="Listar">
			<i class="bi bi-arrow-return-left me-1"></i>
			Voltar
		</a>
	</form>
</div>